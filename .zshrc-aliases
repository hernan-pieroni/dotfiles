# Find aliases with given keywords
alias falias="alias | grep"

# Remove not empty folder
alias rmr="rm -r -f"

# Find process that is using the port given as argument
function findport() {
  lsof -wni :$1
}

# Create a directory and move to it
function mkcd () {
  mkdir $1 && cd $_
}

# Find history entries with given keywords
function hgrep () {
  history | grep --color $1
}
